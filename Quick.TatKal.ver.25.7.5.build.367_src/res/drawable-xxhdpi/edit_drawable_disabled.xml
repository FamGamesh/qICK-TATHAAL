<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="3.0dip"
                android:color="#ff006600" />
            <corners
                android:radius="16.0dip" />
            <solid
                android:color="#ffdddddd" />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="2.0dip"
                android:color="#ff008800" />
            <corners
                android:radius="16.0dip" />
            <solid
                android:color="#ffdddddd" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1.0dip"
                android:color="#ff00aa00" />
            <corners
                android:radius="16.0dip" />
            <solid
                android:color="#ffdddddd" />
        </shape>
    </item>
</selector>