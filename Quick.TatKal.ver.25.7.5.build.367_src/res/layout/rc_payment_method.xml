<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/primary_color"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_method"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10.0dip" />
    <RelativeLayout
        android:background="@drawable/gradient_rectangle"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:layout_below="@id/textView36">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/radioGroup"
            android:background="@color/dialog_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/lyt_ewallets"
                android:background="@drawable/rect_border"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_marginStart="5.0dip" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="e-Wallets"
                    android:layout_marginStart="10.0dip" />
            </LinearLayout>
            <include
                android:id="@id/items_ewallets"
                android:visibility="gone"
                layout="@layout/rc_list_item_ewallets" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/lyt_others"
                android:background="@drawable/rect_border"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_marginStart="5.0dip" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Netbanking, Credit/Debit/Cash Cards, Others"
                    android:layout_marginStart="10.0dip" />
            </LinearLayout>
            <include
                android:id="@id/items_others"
                android:visibility="gone"
                layout="@layout/rc_list_item_others" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/lyt_upi"
                android:background="@drawable/rect_border"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_marginStart="5.0dip" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BHIM / UPI"
                    android:layout_marginStart="10.0dip" />
            </LinearLayout>
            <include
                android:id="@id/items_bhim"
                android:visibility="gone"
                layout="@layout/rc_list_item_bhim" />
        </LinearLayout>
        <CheckBox
            android:textSize="16.0sp"
            android:textColor="#ffffffff"
            android:id="@id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:button="@drawable/checkbox_button"
            android:text="@string/manual_payment"
            android:layout_below="@id/radioGroup"
            android:paddingStart="10.0dip"
            android:layout_marginStart="25.0dip"
            android:layout_alignParentStart="true" />
        <CheckBox
            android:textSize="16.0sp"
            android:textColor="#ffffffff"
            android:id="@id/autofillOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:button="@drawable/checkbox_button"
            android:text="Autofill OTP"
            android:layout_below="@id/checkBox3"
            android:paddingStart="10.0dip"
            android:layout_marginStart="25.0dip" />
        <TextView
            android:textStyle="bold"
            android:textColor="#ffbbbbbb"
            android:id="@id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="@string/info_secured"
            android:layout_below="@id/autofillOTP"
            android:layout_marginStart="20.0dip"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>