<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/dialog_color"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="?colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:elevation="4.0dip" />
    <RelativeLayout
        android:background="@color/dialog_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toolbar">
        <ImageView
            android:id="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:src="@drawable/free_tickets_creative"
            android:layout_below="@id/text2"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip" />
        <TextView
            android:textSize="22.0sp"
            android:textColor="#ffffffff"
            android:id="@id/invite"
            android:background="@drawable/theme_gradient"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/invite_now"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:textAlignment="center" />
        <TextView
            android:textSize="28.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/textView78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:text="@string/share_with_friends"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:id="@id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="@string/and_get_one_extra_ticket"
            android:layout_below="@id/textView78"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:id="@id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/absolutely_free"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>