<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="10.0dip"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip">
            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#ffff4500"
                android:id="@id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="7.0dip"
                android:text="@string/journey_details"
                android:layout_toRightOf="@id/imageView"
                android:layout_alignBaseline="@id/imageView"
                android:layout_marginStart="10.0dip"
                android:layout_toEndOf="@id/imageView" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:layout_above="@id/editText4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <AutoCompleteTextView
                android:textColor="#ff008800"
                android:id="@id/editText3"
                android:background="@drawable/edit_drawable"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_below="@id/imageView"
                android:layout_alignLeft="@id/editText4"
                android:layout_alignParentRight="true"
                android:inputType="textPersonName"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_alignStart="@id/editText4"
                android:layout_alignParentEnd="true" />
            <AutoCompleteTextView
                android:textColor="#ff008800"
                android:id="@id/editText4"
                android:background="@drawable/edit_drawable"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:ems="10"
                android:layout_below="@id/editText3"
                android:layout_alignParentRight="true"
                android:inputType="textPersonName"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_alignParentEnd="true" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:layout_alignBottom="@id/editText4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:layout_alignBottom="@id/editText5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Spinner
                android:entries="@array/travelClass"
                android:id="@id/spinner2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_below="@id/editText5"
                android:layout_alignLeft="@id/editText5"
                android:layout_alignStart="@id/editText5" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel_class"
                android:layout_alignBottom="@id/spinner2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Spinner
                android:entries="@array/quota"
                android:id="@id/spinner3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:prompt="@string/prompt_select"
                android:layout_below="@id/autoCompleteTextView"
                android:layout_alignLeft="@id/spinner2"
                android:layout_alignStart="@id/spinner2" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quota"
                android:layout_alignBottom="@id/spinner3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@id/imageView"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                card_view:srcCompat="@drawable/bullet" />
            <EditText
                android:textColor="#ff008800"
                android:id="@id/editText5"
                android:background="@drawable/edit_drawable"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:cursorVisible="false"
                android:ems="10"
                android:drawableRight="@drawable/datepicker_small"
                android:layout_below="@id/editText4"
                android:layout_alignLeft="@id/editText4"
                android:layout_alignParentRight="true"
                android:drawableEnd="@drawable/datepicker_small"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_alignStart="@id/editText4"
                android:layout_alignParentEnd="true" />
            <AutoCompleteTextView
                android:textColor="#ff008800"
                android:id="@id/autoCompleteTextView"
                android:background="@drawable/edit_drawable"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_toLeftOf="@id/imageView6"
                android:layout_below="@id/spinner2"
                android:layout_alignLeft="@id/spinner3"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_toStartOf="@id/imageView6"
                android:layout_alignStart="@id/spinner3" />
            <Spinner
                android:id="@id/spinner4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_toLeftOf="@id/imageView6"
                android:layout_below="@id/spinner2"
                android:layout_alignLeft="@id/spinner3"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/imageView6"
                android:layout_alignStart="@id/spinner3" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/train_no"
                android:layout_alignBottom="@id/autoCompleteTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                android:text="@string/boarding_stn"
                android:layout_toLeftOf="@id/spinner3"
                android:layout_below="@id/textView7"
                android:layout_alignLeft="@id/textView8"
                android:layout_toStartOf="@id/spinner3"
                android:layout_alignStart="@id/textView8" />
            <AutoCompleteTextView
                android:textColor="#ff008800"
                android:id="@id/editText12"
                android:background="@drawable/edit_drawable"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/optional"
                android:ems="10"
                android:layout_alignBaseline="@id/textView14"
                android:layout_alignBottom="@id/textView14"
                android:layout_alignParentRight="true"
                android:inputType="textPersonName"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@id/imageView3"
                android:visibility="gone"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip" />
            <ImageView
                android:id="@id/imageView6"
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_above="@id/spinner3"
                android:layout_alignTop="@id/autoCompleteTextView"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5.0dip"
                android:layout_alignParentEnd="true"
                card_view:srcCompat="@drawable/search" />
            <TextView
                android:textStyle="bold"
                android:textColor="#ff0000ff"
                android:id="@id/textView47"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_below="@id/editText12"
                android:layout_alignLeft="@id/textView8"
                android:textAllCaps="false"
                android:layout_alignStart="@id/textView8" />
            <RadioGroup
                android:id="@id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:weightSum="1.0"
                android:layout_below="@id/editText12"
                android:layout_alignParentStart="true">
                <RadioButton
                    android:id="@id/radioButton13"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/autoclick1" />
                <RadioButton
                    android:id="@id/radioButton14"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/autoclick2" />
                <RadioButton
                    android:id="@id/radioButton15"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/autoclick3" />
