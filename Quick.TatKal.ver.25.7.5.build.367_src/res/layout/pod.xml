<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/primary_color"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_on_delivery"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10.0dip" />
    <RelativeLayout
        android:background="@drawable/gradient_rectangle"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:layout_below="@id/textView36">
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/payment_option"
            android:layout_marginStart="30.0dip"
            android:layout_alignParentStart="true" />
        <Spinner
            android:entries="@array/podOption"
            android:id="@id/spinner"
            android:background="@drawable/spinner_theme"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_below="@id/textView35"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip"
            android:layout_alignParentEnd="true" />
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/textView37"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:layout_below="@id/spinner"
            android:layout_alignStart="@id/textView35" />
        <EditText
            android:textColor="#ff008800"
            android:id="@id/editText"
            android:background="@drawable/free_tickets_bg"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="3.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:ems="10"
            android:maxLength="10"
            android:layout_below="@id/textView37"
            android:inputType="number"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            android:layout_alignStart="@id/spinner"
            android:layout_alignEnd="@id/spinner" />
        <ImageView
            android:id="@id/imageView10"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_marginTop="15.0dip"
            android:src="@drawable/warning"
            android:layout_below="@id/editText"
            android:layout_marginStart="20.0dip" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="#ffbbbbbb"
            android:id="@id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView10"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip"
            android:layout_toEndOf="@id/imageView10" />
    </RelativeLayout>
</RelativeLayout>