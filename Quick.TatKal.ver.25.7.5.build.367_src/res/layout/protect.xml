<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/theme_round_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="22.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:id="@id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="Form password"
            android:layout_weight="1.0" />
    </LinearLayout>
    <RelativeLayout
        android:id="@id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true">
        <EditText
            android:textColor="#ffffffff"
            android:textColorHint="#ffbbbbbb"
            android:id="@id/editText38"
            android:background="@drawable/custom_edittext_line"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:hint="@string/password"
            android:ems="10"
            android:maxLength="20"
            android:inputType="textPassword"
            android:paddingStart="10.0dip"
            android:paddingEnd="30.0dip"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip" />
        <ImageView
            android:id="@id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:src="@drawable/show_password_grey"
            android:layout_alignBottom="@id/editText38"
            android:layout_alignEnd="@id/editText38" />
    </RelativeLayout>
    <TextView
        android:textColor="#ffff0000"
        android:id="@id/textView44"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout5"
        android:layout_marginStart="20.0dip" />
    <Button
        android:textSize="16.0sp"
        android:textColor="#ffffffff"
        android:id="@id/button"
        android:background="@drawable/new_form_bg"
        android:visibility="visible"
        android:layout_width="200.0dip"
        android:layout_height="40.0dip"
        android:layout_margin="20.0dip"
        android:text="@string/set_password"
        android:layout_below="@id/textView44"
        android:layout_centerInParent="true"
        android:textAllCaps="false" />
</RelativeLayout>