<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/theme_round_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="60.0dip"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/train"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="18.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:text="@string/rate_us_title"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20.0dip"
        android:layout_marginEnd="20.0dip" />
    <TextView
        android:textColor="#ffffffff"
        android:id="@id/rateDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:text="@string/your_feedback_is_important"
        android:layout_below="@id/textView51"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20.0dip"
        android:layout_marginEnd="20.0dip" />
    <RatingBar
        android:theme="@style/ratingBar"
        android:id="@id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:stepSize="1.0"
        android:layout_below="@id/rateDesc"
        android:layout_centerHorizontal="true" />
    <Button
        android:textSize="16.0sp"
        android:textColor="#ffffffff"
        android:layout_gravity="center"
        android:id="@id/relativeLayout"
        android:background="@drawable/new_form_bg"
        android:visibility="gone"
        android:layout_width="200.0dip"
        android:layout_height="40.0dip"
        android:layout_marginBottom="20.0dip"
        android:text="@string/submit"
        android:layout_below="@id/ratingBar"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
</RelativeLayout>