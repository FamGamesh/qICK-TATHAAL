<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/primary_color"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="?colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:elevation="4.0dip" />
    <LinearLayout
        android:id="@id/tab"
        android:background="@color/dialog_color"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:baselineAligned="false"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:id="@id/tab_website"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <TextView
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:id="@id/website_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/tab_rc"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <TextView
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:id="@id/rc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/railconnect"
                android:layout_centerInParent="true" />
            <View
                android:id="@id/rc_marker"
                android:background="@color/colorAccent"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="3.0dip"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tab">
        <TextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/textView69"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:text="@string/rc_not_installed"
            android:layout_above="@id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip" />
        <Button
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:id="@id/relativeLayout"
            android:background="@drawable/new_form_bg"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/download_rail_connect_app"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:paddingStart="30.0dip"
            android:paddingEnd="30.0dip" />
    </RelativeLayout>
</RelativeLayout>