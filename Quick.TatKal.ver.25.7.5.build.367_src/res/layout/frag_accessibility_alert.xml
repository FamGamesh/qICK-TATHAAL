<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    android:id="@id/flipper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@drawable/theme_round_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ffbbbbbb"
                android:layout_gravity="center"
                android:id="@id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="Accept usage terms"
                android:layout_weight="1.0" />
        </LinearLayout>
        <RelativeLayout
            android:id="@id/linearLayout5"
            android:paddingTop="30.0dip"
            android:paddingBottom="40.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20.0dip"
                    android:paddingEnd="20.0dip" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:paddingStart="10.0dip"
                    android:paddingEnd="10.0dip">
                    <ImageView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:src="@drawable/info"
                        app:tint="#ffbbbbbb" />
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="#ffbbbbbb"
                        android:id="@id/acceptTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We do not store any data retrieved from IRCTC Rail Connect app using accessibility service and the service is just used to automate the app for quicker bookings"
                        android:paddingStart="10.0dip"
                        android:paddingEnd="10.0dip" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_below="@id/linearLayout5"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:orientation="vertical"
                android:id="@id/cancel"
                android:background="@drawable/dialog_button_left"
                android:paddingBottom="5.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginEnd="1.0dip">
                <TextView
                    android:textSize="18.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="Decline"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@id/proceed2"
                android:background="@drawable/dialog_button_right"
                android:paddingBottom="5.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginStart="1.0dip">
                <TextView
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:id="@id/agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="Agree"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ViewFlipper>