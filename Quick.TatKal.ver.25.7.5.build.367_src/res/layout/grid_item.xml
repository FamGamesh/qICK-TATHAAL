<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/grid_container"
    android:background="#ff2e94ab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="24.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView45"
        android:paddingTop="50.0dip"
        android:paddingBottom="50.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akanksha"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAllCaps="false" />
    <EditText
        android:textSize="24.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/editText"
        android:visibility="gone"
        android:layout_width="150.0dip"
        android:layout_height="wrap_content"
        android:selectAllOnFocus="true"
        android:maxLength="20"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textCapSentences" />
    <ImageView
        android:id="@id/imageView10"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_margin="5.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/delete" />
    <ImageView
        android:id="@id/imageView11"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_margin="5.0dip"
        android:layout_toRightOf="@id/textView45"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textView45"
        app:srcCompat="@drawable/edit" />
    <ImageView
        android:id="@id/imageView12"
        android:visibility="gone"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_toRightOf="@id/editText"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/editText"
        app:srcCompat="@drawable/done" />
    <ImageView
        android:id="@id/imageView13"
        android:visibility="gone"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_toLeftOf="@id/textView45"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10.0dip"
        android:layout_toStartOf="@id/textView45"
        app:srcCompat="@drawable/lock" />
</RelativeLayout>