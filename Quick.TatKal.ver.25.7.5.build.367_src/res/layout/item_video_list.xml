<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/main"
    android:background="@color/primary_color"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/quiz1"
        android:adjustViewBounds="true" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="#ffffffff"
        android:id="@id/duration"
        android:background="#ff000000"
        android:paddingTop="2.0dip"
        android:paddingBottom="2.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:text="14:09"
        android:layout_alignBottom="@id/thumbnail"
        android:paddingStart="5.0dip"
        android:paddingEnd="5.0dip"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/thumbnail"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:src="@drawable/play"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <TextView
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/desc"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="How to book confirmed and guaranteed Tatkal ticket using Rail Connect in Quick Tatkal?"
        android:layout_below="@id/thumbnail" />
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5.0dip"
        android:layout_below="@id/desc"
        android:paddingStart="10.0dip">
        <TextView
            android:textColor="#ffcccccc"
            android:id="@id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YouTube • Quick Tatkal • " />
        <TextView
            android:textColor="#ffcccccc"
            android:id="@id/upload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 days ago" />
    </LinearLayout>
</RelativeLayout>