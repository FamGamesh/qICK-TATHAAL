<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/secondary_color"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView48"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15.0dip"
        android:text="User Type"
        android:textAlignment="center" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView48">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/agent_user"
            android:background="@color/dialog_color"
            android:padding="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IRCTC agent / Experienced user" />
            <TextView
                android:textColor="#ffbbbbbb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="Users looking to earn commission in Quick Tatkal by booking other users' tickets" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/dialog_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="10.0dip" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/regular_user"
            android:background="@color/dialog_color"
            android:padding="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular user" />
            <TextView
                android:textColor="#ffbbbbbb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="Users looking to book tickets from IRCTC agents or other experienced users in Quick Tatkal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>