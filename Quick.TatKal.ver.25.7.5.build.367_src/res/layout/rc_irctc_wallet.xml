<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        card_view:cardElevation="10.0dip"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:paddingBottom="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#ffff4500"
                android:id="@id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="7.0dip"
                android:text="@string/irctc_ewallet"
                android:layout_toRightOf="@id/imageView"
                android:layout_alignBaseline="@id/imageView"
                android:layout_marginStart="10.0dip"
                android:layout_toEndOf="@id/imageView" />
            <ImageView
                android:id="@id/imageView"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10.0dip"
                android:layout_alignParentStart="true"
                card_view:srcCompat="@drawable/bullet" />
            <TextView
                android:textSize="16.0sp"
                android:id="@id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="20.0dip"
                android:text="@string/transaction_password"
                android:layout_below="@id/textView36"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10.0dip"
                android:layout_alignParentStart="true" />
            <EditText
                android:textColor="#ff008800"
                android:id="@id/editText35"
                android:background="@drawable/edit_drawable"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:ems="10"
                android:layout_toRightOf="@id/textView35"
                android:layout_alignBaseline="@id/textView35"
                android:layout_alignParentRight="true"
                android:inputType="textPassword"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="10.0dip"
                android:layout_toEndOf="@id/textView35"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>