<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/primary_color"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upi"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10.0dip" />
    <RelativeLayout
        android:background="@drawable/gradient_rectangle"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:layout_below="@id/textView36">
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/pymtMediumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/payment_method"
            android:layout_marginStart="30.0dip"
            android:layout_alignParentStart="true" />
        <Spinner
            android:entries="@array/bhim"
            android:id="@id/spinner13"
            android:background="@drawable/spinner_theme"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_below="@id/pymtMediumTv"
            android:paddingEnd="30.0dip"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="@string/vpa"
            android:layout_below="@id/spinner13"
            android:layout_marginStart="30.0dip"
            android:layout_alignParentStart="true" />
        <EditText
            android:textColor="#ffffffff"
            android:id="@id/editText35"
            android:background="@drawable/free_tickets_bg"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:ems="10"
            android:layout_below="@id/textView35"
            android:inputType="textEmailAddress"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            android:layout_alignStart="@id/spinner13"
            android:layout_alignEnd="@id/spinner13" />
        <CheckBox
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/autoOpen"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:button="@drawable/checkbox_button"
            android:layout_below="@id/editText35"
            android:paddingStart="10.0dip"
            android:layout_marginStart="20.0dip" />
        <RelativeLayout
            android:id="@id/upiAutofillLayout"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/autoOpen">
            <TextView
                android:textSize="13.0sp"
                android:textColor="#ffffffff"
                android:id="@id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/upi_pin"
                android:layout_marginStart="30.0dip"
                android:layout_alignParentStart="true" />
            <EditText
                android:textColor="#ffffffff"
                android:id="@id/upiPinEd"
                android:background="@drawable/free_tickets_bg"
                android:paddingLeft="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginTop="5.0dip"
                android:ems="10"
                android:maxLength="8"
                android:layout_below="@id/textView37"
                android:inputType="number"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                android:layout_marginStart="20.0dip"
                android:layout_marginEnd="20.0dip"
                android:layout_toEndOf="@id/textView37"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
            <CheckBox
                android:textSize="16.0sp"
                android:textColor="#ffffffff"
                android:id="@id/autofillUpi"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:button="@drawable/checkbox_button"
                android:text="Autofill UPI payment"
                android:layout_below="@id/upiPinEd"
                android:paddingStart="10.0dip"
                android:layout_marginStart="20.0dip" />
            <CheckBox
                android:textSize="16.0sp"
                android:textColor="#ffffffff"
                android:id="@id/defaultBank"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:button="@drawable/checkbox_button"
                android:text="Automatically pay with the default bank selected for payment"
                android:layout_below="@id/autofillUpi"
                android:paddingStart="10.0dip"
                android:layout_marginStart="20.0dip"
                android:layout_marginEnd="20.0dip" />
            <TextView
                android:textSize="13.0sp"
                android:textColor="#ffdddddd"
                android:id="@id/defaultBankInfo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="(Don't tick this if you want to select bank account for UPI payment manually at the time of payment)"
                android:layout_below="@id/defaultBank"
                android:layout_marginStart="52.0dip" />
            <ImageView
                android:id="@id/info1"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginTop="10.0dip"
                android:src="@drawable/info"
                android:layout_below="@id/defaultBankInfo"
                android:layout_alignStart="@id/upiPinEd"
                app:tint="#ff999999" />
            <TextView
                android:textSize="13.0sp"
                android:textColor="#ff999999"
                android:id="@id/textView80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_safe"
                android:layout_alignTop="@id/info1"
                android:layout_marginStart="5.0dip"
                android:layout_toEndOf="@id/info1" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>