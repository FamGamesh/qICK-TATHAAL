<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/primary_color"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:text="@string/irctc_login"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10.0dip" />
    <RelativeLayout
        android:background="@drawable/gradient_rectangle"
        android:paddingBottom="20.0dip"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:layout_below="@id/textView36">
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/username"
            android:layout_marginStart="30.0dip"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/focusableLayout"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0.0px"
            android:layout_height="0.0px" />
        <EditText
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/editText"
            android:background="@drawable/free_tickets_bg"
            android:padding="10.0dip"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_below="@id/textView"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip"
            android:layout_toEndOf="@id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
        <EditText
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/editText2"
            android:background="@drawable/free_tickets_bg"
            android:padding="10.0dip"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:ems="10"
            android:layout_below="@id/textView2"
            android:inputType="textPassword"
            android:layout_alignStart="@id/editText"
            android:layout_alignEnd="@id/editText" />
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="@string/password"
            android:layout_below="@id/editText"
            android:layout_alignLeft="@id/textView"
            android:layout_alignStart="@id/textView" />
        <TextView
            android:textSize="13.0sp"
            android:textStyle="bold"
            android:textColor="#ffcccc00"
            android:id="@id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/no_irctc_account_register_now"
            android:layout_below="@id/editText2"
            android:layout_alignLeft="@id/textView"
            android:layout_alignStart="@id/textView" />
    </RelativeLayout>
</RelativeLayout>