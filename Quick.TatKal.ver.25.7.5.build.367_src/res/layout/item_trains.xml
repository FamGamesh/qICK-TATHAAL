<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/gradient_rectangle"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/train_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01039" />
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KOP GONDIA SPL"
            android:layout_marginStart="20.0dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip">
        <TextView
            android:textStyle="bold"
            android:textColor="#ffdddddd"
            android:id="@id/depCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STR" />
        <TextView
            android:textColor="#ffdddddd"
            android:id="@id/depTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:50"
            android:layout_marginStart="7.0dip" />
        <TextView
            android:textSize="10.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:layout_marginStart="20.0dip" />
        <TextView
            android:textSize="10.0sp"
            android:textColor="#ffdddddd"
            android:layout_gravity="top"
            android:id="@id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h 3m"
            android:layout_marginStart="5.0dip" />
        <TextView
            android:textSize="10.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="➝"
            android:layout_marginStart="5.0dip" />
        <TextView
            android:textStyle="bold"
            android:textColor="#ffdddddd"
            android:id="@id/arrCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSL"
            android:layout_marginStart="20.0dip" />
        <TextView
            android:textColor="#ffdddddd"
            android:id="@id/arrTime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="07:30"
            android:layout_marginStart="7.0dip" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/rcv_classes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip" />
    </FrameLayout>
</LinearLayout>