<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/primary_color"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/railconnect_pin"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10.0dip" />
    <RelativeLayout
        android:background="@drawable/gradient_rectangle"
        android:paddingBottom="20.0dip"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:layout_below="@id/textView36">
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffffffff"
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/pin"
            android:layout_marginStart="30.0dip"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/focusableLayout"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0.0px"
            android:layout_height="0.0px" />
        <EditText
            android:textColor="#ffffffff"
            android:id="@id/editText"
            android:background="@drawable/free_tickets_bg"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="3.0dip"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:ems="10"
            android:maxLength="4"
            android:layout_below="@id/textView"
            android:inputType="numberPassword"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip"
            android:layout_toEndOf="@id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:textSize="13.0sp"
            android:textStyle="bold"
            android:textColor="#ffcccc00"
            android:id="@id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="@string/no_irctc_account_register_now"
            android:layout_below="@id/editText"
            android:layout_alignLeft="@id/textView"
            android:layout_alignStart="@id/textView" />
    </RelativeLayout>
</RelativeLayout>