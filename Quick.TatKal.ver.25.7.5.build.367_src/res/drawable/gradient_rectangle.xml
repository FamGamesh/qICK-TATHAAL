        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#ffa34bff"
                android:endColor="#ff224ff9"
                android:angle="90.0" />
            <corners
                android:radius="20.0dip" />
        </shape>
    </item>
    <item
        android:left="2.0dip"
        android:top="2.0dip"
        android:right="2.0dip"
        android:bottom="2.0dip">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/primary_color" />
            <corners
                android:radius="20.0dip" />
        </shape>
    </item>
</layer-list>